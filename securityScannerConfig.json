{
  "dependencyScanner": {
    "db": ["Sonatype"],
    "vulnerabilityFilter": {
      "cvssScore": "none",
      "cvssVector": "S:U"
    }
  },

  "injectionsScanner": [
    {
      "pattern": "(SELECT|INSERT|UPDATE|DELETE|DROP|EXEC)\\s+.*(['\"].*['\"].*|.*\\+.*|.*\\{\\d+\\}.*)",
      "name": "sqlPattern",
      "message": "SqlCommand with string concatenation detected",
      "files": [".py"],
      "kinds": ["src"]
    },
    {
        "pattern": "(?<![\\w])eval\\(",
        "name": "eval",
        "message": "eval Method found - please use ast.literal_eval instead",
        "files": [".py"],
        "kinds": ["src", "ast"]
      }
  ]
}
